---
import '@fontsource-variable/inter';
import { Cursor } from '../components/Cursor';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-neutral-950 text-white font-sans">
    <Cursor client:visible />
		<slot />
	</body>
</html>

<style is:global>
@font-face {
  font-family: 'Tobias';
  src: url('/fonts/tobias/Tobias-Uprights.woff2') format('woff2');
  font-style: normal;
  font-display: block;
}
@font-face {
  font-family: 'Tobias';
  src: url('/fonts/tobias/Tobias-Italics.woff2') format('woff2');
  font-style: italic;
  font-display: block;
}

@font-face {
  font-family: 'Matter';
  src: url('/fonts/matter/Matter.woff2') format('woff2');
  font-weight: normal;
  font-display: block;
}

* {
  cursor: none !important;
}
</style>